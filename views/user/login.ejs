<% layout("/layout/boilerplate") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h4 class="mb-6">WonderLust login</h4>
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username"class="form-label"><b>Username</b></label>
              <input name="username" placeholder="enter username" id= "username" type="text" class="form-control" required />
              <div class="invalid-feedback">look good</div>
            </div>

            <div class="mb-3">
                <label for="password"class="form-label"><b>password</b></label>
                <input name="password" placeholder="enter password" id= "password" type="password" class="form-control" required />
                <div class="invalid-feedback">look good</div>
              </div>

              <button class="btn btn-dark">Submit</button>
        </form>
    </div>
</div>
